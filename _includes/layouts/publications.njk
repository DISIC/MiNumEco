---
layout: layouts/base.njk
---

{% include "breadcrumb.njk" %}

<h1>{{ title }}</h1>

{% set postslist = collections.all | eleventyNavigation("publications") %}

<div class="fr-grid-row fr-grid-row--gutters">
   
{% for post in postslist | reverse %}
  <div class="fr-col-12 fr-col-md-4">
    <div class="fr-card fr-enlarge-link">
        <div class="fr-card__body">
            <p class="fr-card__detail"><time datetime="{{ post.date | htmlDateString }}">{{ post.date | readableDate }}</time></p>
            <h2 class="fr-card__title">
                <a href="{{ post.url | url }}" class="fr-card__link">{{ post.title }}</a>
            </h2>
            {%if post.description %}
            <p class="fr-card__desc">
              {{ post.description }}
            </p>
            {%endif %}
        </div>
        <div class="fr-card__img">
            <img src="{{ post.image }}" alt="">
        </div>
    </div> 
  </div>
{% endfor %}

</div>